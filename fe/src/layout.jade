doctype html
html.no-js
  include ../node_modules/jadeit/mixins.jade
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    +meta("viewport", "width=device-width, initial-scale=1")
    title
      block title
        | Helps you find hikes, treks, adventures
    block meta
      +meta-description("Helps you find hikes, treks, adventures around Pune and Mumbai. Listing platform for organizers.")
      +og-meta('image', 'http://hikesaround.me/img/default-fb.jpg')
    <!-- build:css /css/vendor.css -->
    +css("/bower_components/foundation-icon-fonts/foundation-icons.css")
    +css("https://cdnjs.cloudflare.com/ajax/libs/foundation/6.1.2/foundation.min.css")
    +css("/css/main.css")
    <!-- endbuild -->
    block style-after-main
  body
    +browsehappy
    .header-container
      header.wrapper.clearfix
        block header
        nav
          block nav

    .main-container

    .main.wrapper.clearfix
      .top-bar
        .top-bar-left
          ul.menu
            li
              a(href='/') Hikes Around Me
            li
              a(href='/about.html') About
      hr

      block main

    .footer-container
      footer.wrapper
        block footer
    block post-footer

  <!-- build:js /js/all.js -->
  script(src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js")
  script(src="https://code.jquery.com/jquery-2.1.4.min.js")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/knockout/3.4.0/knockout-min.js")
  script(src="/bower_components/jquery.cookie/jquery.cookie.js")
  script(src="/js/common.js")
  <!-- endbuild -->
  block post-jslibs

  script
    block main-script

  block ga
    +google-analytics('UA-51914996-2', 'hikesaround.me')
